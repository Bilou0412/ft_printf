#include"../libft/libft.h"
#include<stdarg.h>

static	int	check_str(const char *str)
{
	while (*str)
	{
		str = ft_strchr(str, '%');
		if (!str)
			return (0);
		str++;
		if (!ft_strchr("cspdiuxX%", *str))
			return (1);
	}
	return (1);
}

int	ft_printf(const char *str)
{
	if (check_str(str))
		return (0);
}

int	main(void)
{

}
